{% extends "frontend.html.twig" %}

{% block body %}
    <div class="container body">
        <div class="main_container">
            <!-- page content -->
            <div class="col-md-12">
                <div class="col-middle">
                    <div class="text-center">
                        <h1 class="error-number">500</h1>
                        <h2>{{ 'Internal Server Error'|trans }}</h2>
                        {% trans with {'%homepage%': path('homepage')} %}<p>We track these errors automatically, but if the problem persists feel free to contact us. In the meantime, try go <a href="%%homepage%%">Home</a></p>{% endtrans %}
                        <div class="mid_center">
                            <h3>{{ 'Search'|trans }}</h3>
                            <form action="https://www.google.com/">
                                <div class="col-xs-12 form-group pull-right top_search">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="{{ 'Search for...'|trans }}">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">{{ 'Go!'|trans }}</button>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /page content -->
      </div>
    </div>
{% endblock %}
