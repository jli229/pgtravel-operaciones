{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Service confirm'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right" style="margin-bottom: 4px;">
                        <button type="button" data-toggle="collapse" aria-expanded="false" aria-controls="filter-row" data-target="#filter-row" class="btn btn-default"><span class="fa fa-filter"></span></button>
                    </div>
                    <div class="clearfix"></div>
                    <form id="filter">
                        <div class="row collapse" id="filter-row">
                            <div class="col-sm-2 col-sm-offset-10 col-xs-6 col-xs-offset-6">
                                {{ form_label(form.isNotified) }}
                                {{ form_widget(form.isNotified, {attr: {class: "form-control input-sm"}}) }}
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-xs-12"><br></div>
                    </div>
                    <table id="datatable-x" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Representant'|trans }}</th>
                                <th>{{ 'Client'|trans }}</th>
                                <th>{{ 'Supplier'|trans }}</th>
                                <th>{{ 'Service'|trans }}</th>
                                <th>{{ 'Start'|trans }}</th>
                                <th>{{ 'End'|trans }}</th>
                                <th>{{ 'Reference'|trans }}</th>
                                <th width="40">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade in" id="modalConfirm">
        <div class="modal-dialog">
            <div class="modal-content"></div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Notifications.Index.init();
        });
    </script>
{% endblock %}
