{{ form_start(form, {'action': path('app_notifications_changestate', {'id': form.vars.data.id}), 'attr': {'role': 'form'}}) }}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ 'Confirm supplier'|trans }}</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="form-group div col-xs-12">
                {{ form_label(form.supplier, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.supplier, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group div col-xs-12">
                {{ form_label(form.supplierReference, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.supplierReference, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">{{ 'Confirm'|trans }}</button>
        <button type="button" data-dismiss="modal" class="btn btn-default">{{ 'Close'|trans }}</button>
    </div>
{{ form_end(form) }}