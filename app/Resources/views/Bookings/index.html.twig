{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Bookings'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row" id="filter" style="display: none;">
                        <div class="col-sm-2"></div>
                    </div>
                    <table id="datatable-x" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Start date'|trans }}</th>
                                <th>{{ 'End date'|trans }}</th>
                                <th width="90">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade in" id="modal-view" aria-labelledby="modal-title">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ 'View booking'|trans }}</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary">{{ 'Edit'|trans }}</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    {% javascripts filter="yui_js" output="compiled/js/booking-list.js" '../web/js/booking-list.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function() {
            {% if app.session.flashBag.has('notice') %}
                +(function() {
                    swal({
                        title: '{{ 'Notification'|trans }}',
                        text: '{{ app.session.flashBag.get('notice')[0] }}'
                    });
                }());
            {% endif %}
        });
    </script>
{% endblock %}