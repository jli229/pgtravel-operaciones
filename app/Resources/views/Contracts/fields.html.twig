                {{ form_label(form.fromDate, null, {'label_attr': {'class': 'control-label'}}) }}
                <div class="input-group datetimepicker">
                    {{ form_widget(form.fromDate, {'attr': {'class': 'form-control'}}) }}
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                </div>
                {{ form_errors(form.fromDate) }}
            </div>
            <div class="form-group col-sm-6 col-xs-12">
                {{ form_label(form.toDate, null, {'label_attr': {'class': 'control-label'}}) }}
                <div class="input-group datetimepicker">
                    {{ form_widget(form.toDate, {'attr': {'class': 'form-control'}}) }}
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                </div>
                {{ form_errors(form.toDate) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-xs btn-danger btn-block btn-remove" type="button"><i class="fa fa-trash"></i></button>
                <hr class="visible-xs">
                <br class="hidden-xs">
            </div>
        </div>
    </div>
{% endblock %}
