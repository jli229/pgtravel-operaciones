{% block collection_row %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endblock %}

{% block contract_attachment_row %}
    <div class="item item-attachment">
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.file, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.file) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-xs-12">
            <button type="button" class="btn btn-danger btn-block btn-xs btn-remove" title="{{ 'Remove'|trans }}"><i class="fa fa-trash"></i></button>
        </div>
        <div class="col-xs-12">
            <hr>
        </div>
    </div>
{% endblock %}

{% block contract_top_service_row %}
    <div class="row item item-top-service">
        <div class="form-group col-xs-12 col-sm-10">
            {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group col-xs-12 col-sm-2">
            {{ form_label(form.price, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control text-right'}}) }}
            {{ form_errors(form.price) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.startAt, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="input-group datetimepicker">
                {{ form_widget(form.startAt, {'attr': {'class': 'form-control'}}) }}
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            </div>
            {{ form_errors(form.startAt) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.endAt, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="input-group datetimepicker">
                {{ form_widget(form.endAt, {'attr': {'class': 'form-control'}}) }}
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            </div>
            {{ form_errors(form.endAt) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.description, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.notes, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.notes, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.notes) }}
        </div>
        <div class="col-xs-12">
            <button type="button" class="btn btn-danger btn-block btn-xs btn-remove" title="{{ 'Remove'|trans }}"><i class="fa fa-trash"></i></button>
        </div>
        <div class="col-xs-12">
            <hr>
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}

{% block contract_facility_row %}
    <div class="row item item-hotel-facility">
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.category, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.category) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.postalAddress, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.postalAddress, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.postalAddress) }}
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            {{ form_label(form.activePlans, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.activePlans, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.postalAddress) }}
        </div>
        <div class="col-xs-12">
            <div class="x_panel item">
                <div class="x_title">{{ 'Rooms'|trans }}</div>
                <div class="x_content">
                    <div class="row collection collection-rooms" data-prototype="{{ form_row(form.rooms.vars.prototype)|e }}">
                        {{ form_row(form.rooms) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-info btn-xs btn-add-item" title="{{ 'Add room'|trans }}"><i class="fa fa-plus-circle"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="x_panel item">
                <div class="x_title">{{ 'Seasons'|trans }}</div>
                <div class="x_content">
                    <div class="row collection collection-seasons" data-prototype="{{ form_row(form.seasons.vars.prototype)|e }}">
                        {{ form_row(form.seasons) }}
                    </div>
                    <div class="clearfix"></div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-info btn-xs btn-add-item" title="{{ 'Add season'|trans }}"><i class="fa fa-plus-circle"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="btn-group btn-group-justified" role="group">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default btn-xs btn-clone-item" title="{{ 'Copy facility'|trans }}"><i class="fa fa-clone"></i></button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-danger btn-xs btn-remove" title="{{ 'Remove facility'|trans }}"><i class="fa fa-trash"></i></button>
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <hr>
        </div>
    </div>
{% endblock %}

{% block contract_facility_room_row %}
    <div class="form-group col-xs-12 col-sm-4 item">
        {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
