            <h2>{{ form_label(form.privateHouseServices)|striptags }}</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="collection collection-private-house-services" data-prototype="{{ form_row(form.privateHouseServices.vars.prototype)|e }}">
                {{ form_row(form.privateHouseServices) }}
            </div>
            <div class="clearfix"></div>
            <div class="pull-right">
                <button type="button" class="btn btn-info btn-xs btn-add-item" title="{{ 'Add service'|trans }}"><i class="fa fa-plus-circle"></i></button>
