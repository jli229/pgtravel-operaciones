            <h2>{{ form_label(form.carRentalServices)|striptags }}</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="collection collection-car-rental-services" data-prototype="{{ form_row(form.carRentalServices.vars.prototype)|e }}">
