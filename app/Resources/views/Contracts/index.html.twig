{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Contracts'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right" style="margin-bottom: 4px;">
                        <div class="btn-group">
                            <a href="{{ path('app_contracts_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a>
                            <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#filter-row" aria-expanded="false" aria-controls="filter-row"><span class="fa fa-filter"></span></button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <form action="" id="filter">
                        <div class="row collapse" id="filter-row">
                            <div class="col-sm-4 col-xs-12">
                                {{ form_row(form.name, {attr: {class: 'input-sm'}}) }}
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                {{ form_row(form.model, {attr: {class: "input-sm"}}) }}
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                {{ form_row(form.supplier, {attr: {class: 'input-sm'}}) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                    <table id="datatable-x" class="table table-striped table-bordered bulk_action" width="100%">
                        <thead>
                            <tr>
                                <th width="26">&nbsp;</th>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Type'|trans }}</th>
                                <th>{{ 'Supplier'|trans }}</th>
                                <th>{{ 'Sign date'|trans }}</th>
                                <th>{{ 'Start date'|trans }}</th>
                                <th>{{ 'End date'|trans }}</th>
                                <th width="60">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Contracts.Index.init();
        });
    </script>
{% endblock %}
