{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Contracts'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form action="" id="filter">
                        <div class="row">
                            <div class="col-sm-3 col-sm-offset-9 col-xs-12 form-group">
                                <label for="filter_type">{{ "Type"|trans }}</label>
                                <select name="filter[type]" id="filter_type" class="form-control input-sm">
                                    <option value=""></option>
                                    {% for name, type in types %}
                                        <option value="{{ name }}"{{ filter.type|default("") == name ? " selected" : "" }}>{{ type }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </form>
                    <div class="pull-right"><a href="{{ path('app_contracts_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-x" class="table table-striped table-bordered bulk_action" width="100%">
                        <thead>
                            <tr>
                                <th width="26">&nbsp;</th>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Type'|trans }}</th>
                                <th>{{ 'Supplier'|trans }}</th>
                                <th>{{ 'Sign date'|trans }}</th>
                                <th>{{ 'Start date'|trans }}</th>
                                <th>{{ 'End date'|trans }}</th>
                                <th width="60">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Contracts.Index.init();
        });
    </script>
{% endblock %}
