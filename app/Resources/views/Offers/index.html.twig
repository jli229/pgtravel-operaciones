{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Offers'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right"><a href="{{ path('app_offers_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-offers" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th width="60">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script src="{{ asset('plugins/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/sweetalert/sweetalert.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            {% if app.session.flashBag.has('notice') %}
                +(function() {
                    swal({
                        title: '{{ 'Notification'|trans }}',
                        text: '{{ app.session.flashBag.get('notice')[0] }}'
                    });
                }());
            {% endif %}

            var $table = $('#datatable-offers');

            $table.dataTable({
                'order': [[ 1, 'asc' ]],
                'columnDefs': [
                    {
                        orderable: false,
                        sortable: false,
                        targets: [1]
                    },
                    {
                        name: 'name',
                        targets: [0]
                    }
                ],
                serverSide: true,
                ajax: {
                    method: 'post',
                    url: '{{ path('app_offers_getdata') }}'
                }
            });

            $table.on('draw.dt', function() {
                $(this).find('a.btn-delete').on('click', function(event) {
                    event.preventDefault();

                    var url = $(this).attr('href'),
                        $a = $(this);

                    swal({
                        title: '{{ 'Confirm remove'|trans }}',
                        text: '{{ 'The record will be removed. Are you sure you want to continue?'|trans }}',
                        type: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d9534f'
                    }, function(isConfirmed) {
                        if (isConfirmed) {
                            $a.closest('td').text('{{ 'Removing...'|trans }}').closest('tr').addClass('row-removing');
                            $.ajax(url, {
                                dataType: 'json',
                                method: 'post',
                                success: function(json) {
                                    $table.find('tr.row-removing').remove();
                                    $table.dataTable().api().draw(false);
                                }
                            });
                        }
                    });
                });
            });
        });
    </script>
{% endblock %}