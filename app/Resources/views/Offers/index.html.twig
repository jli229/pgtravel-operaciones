{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Booking list'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right" style="margin-bottom: 4px;">
                        <div class="btn-group">
                            <a href="{{ path('app_offers_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a>
                            <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#rowFilter" aria-expanded="false" aria-controls="rowFilter"><span class="fa fa-filter"></span></button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <form id="filter" role="form">
                        <div class="row collapse" id="rowFilter">
                            <div class="col-xs-6 col-sm-3 form-group">
                                {{ form_label(form.startAt.left_date) }}
                                <div class="input-group date">
                                    {{ form_widget(form.startAt.left_date, {attr: {class: "form-control input-sm"}}) }}
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-3 form-group">
                                {{ form_label(form.startAt.right_date) }}
                                <div class="input-group date">
                                    {{ form_widget(form.startAt.right_date, {attr: {class: "form-control input-sm"}}) }}
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-3 form-group">
                                {{ form_label(form.state) }}
                                {{ form_widget(form.state, {attr: {class: "form-control input-sm"}}) }}
                            </div>
                            <div class="col-xs-12 col-sm-3 form-group">
                                {{ form_label(form.isCancelled) }}
                                {{ form_widget(form.isCancelled, {attr: {class: "form-control input-sm"}}) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </form>
                    <table id="datatable-offers" class="table table-striped table-bordered" width="100%"></table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Bookings.Index.init();
        });
    </script>
{% endblock %}
