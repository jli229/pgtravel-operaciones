{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Offers'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right"><a href="{{ path('app_offers_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-offers" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Client'|trans }}</th>
                                <th>{{ 'Date'|trans }}</th>
                                <th width="130">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            {% if app.session.flashBag.has('notice') %}
                +(function() {
                    swal({
                        title: '{{ 'Notification'|trans }}',
                        text: '{{ app.session.flashBag.get('notice')[0] }}'
                    });
                }());
            {% endif %}

            var $table = $('#datatable-offers');

            $table.on('click', 'a.btn-cancel', function(event) {
                event.preventDefault();

                var $a = $(this), url = $a.attr('href');
                
                swal({
                    title: '{{ 'Confirm operation'|trans }}',
                    text: '{{ 'The record will be cancelled. Are you sure you want to continue?'|trans }}',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d9534f'
                }, function(isConfirmed) {
                    if (isConfirmed) {
                        $a.closest('td').text('{{ 'Updating...'|trans }}').closest('tr').addClass('row-removing');
                        $.ajax(url, {
                            dataType: 'json',
                            method: 'post',
                            success: function(json) {
                                $table.dataTable().api().draw(false);
                            }
                        });
                    }
                });
            });

            $table.dataTable({
                'order': [[ 2, 'desc' ]],
                'columnDefs': [
                    {
                        searchable: false,
                        sortable: false,
                        targets: [3]
                    },
                    {
                        name: 'name',
                        targets: [0]
                    },
                    {
                        name: 'client',
                        targets: [1]
                    },
                    {
                        name: 'startAt',
                        searchable: false,
                        targets: [2]
                    }
                ],
                processing: true,
                serverSide: true,
                ajax: {
                    method: 'post',
                    url: '{{ path('app_offers_getdata') }}'
                }
            });

            $('body').on('click', 'a.btn-delete', function(event) {
                event.preventDefault();

                var url = $(this).attr('href'),
                    $a = $(this);

                swal({
                    title: '{{ 'Confirm remove'|trans }}',
                    text: '{{ 'The record will be removed. Are you sure you want to continue?'|trans }}',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d9534f'
                }, function(isConfirmed) {
                    if (isConfirmed) {
                        $a.closest('td').text('{{ 'Removing...'|trans }}').closest('tr').addClass('row-removing');
                        $.ajax(url, {
                            dataType: 'json',
                            method: 'post',
                            success: function(json) {
                                $table.find('tr.row-removing').remove();
                                $table.dataTable().api().draw(false);
                            }
                        });
                    }
                });
            });

            $('body').on('click', 'a.btn-promote', function(event) {
                event.preventDefault();

                var url = $(this).attr('href'),
                    $a = $(this);

                swal({
                    title: '{{ 'Confirm move'|trans }}',
                    text: '{{ 'The record will be moved to the official operation. Are you sure you want to continue?'|trans }}',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#337ab7'
                }, function(isConfirmed) {
                    if (isConfirmed) {
                        $a.closest('td').text('{{ 'Moving...'|trans }}').closest('tr').addClass('row-promoting');
                        $.ajax(url, {
                            dataType: 'json',
                            method: 'post',
                            success: function(json) {
                                $table.find('tr.row-promoting').remove();
                                $table.dataTable().api().draw(false);
                            }
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}