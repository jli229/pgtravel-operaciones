<table class="table table-condensed table-striped table-bordered">
    <thead>
        <tr>
            <th>{{ 'Supplier'|trans }}</th>
            <th>{{ 'Room'|trans }}</th>
            <th>{{ 'Plan'|trans }}</th>
            <th>{{ 'Price'|trans }}</th>
            <th>{{ 'Total'|trans }}</th>
            <th width="40" data-sortable="false">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for service in query.result %}
            {%- set data = {
supplier: {
    id: service.contract.supplier.id,
    name: service.contract.supplier.name
},
service: '%nights% nights(s) in %q% x %room%(s) at %house%'|trans({'%nights%': nights, '%q%': quantity, '%room%': service.roomName, '%house%': service.contract.supplier.name}),
supplierNotes: 'Meal plan: %plan%'|trans({'%plan%': service.mealPlan}),
nights: nights,
cost: '%0.2f'|format(service.price),
totalPrice: '%0.2f'|format(service.price * nights * quantity)
        } -%}
            <tr>
                <td>{{ service.contract.supplier.name }}</td>
                <td>{{ service.roomName }}</td>
                <td>{{ service.mealPlan }}</td>
                <td class="text-right">{{ '%0.2f'|format(service.price) }}</td>
                <td class="text-right">{{ '%0.2f'|format(service.price * nights * quantity) }}</td>
                <td class="text-center"><button type="button" class="btn btn-success btn-xs btn-select-service" title="{{ 'Select service'|trans }}" data-service="{{ data|json_encode|e }}"><i class="fa fa-check"></i></button></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
