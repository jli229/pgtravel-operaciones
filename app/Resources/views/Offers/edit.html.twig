{% extends 'frontend.html.twig' %}

{% form_theme form 'Offers/fields.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Offers'|trans }} <small>{{ 'edit'|trans }}</small></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form, {'attr': {'role': 'form', 'id': 'reservation'}}) }}
                {{ form_row(form) }}
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                    <a href="{{ path('app_offers_index') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="modal fade in" id="searchServiceModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ 'Search service'|trans }}</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">{{ 'Close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.Bookings.Form.init();
        });
    </script>
{% endblock %}
