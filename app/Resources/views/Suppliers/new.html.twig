{% extends 'frontend.html.twig' %}

{% form_theme form 'Suppliers/form.html.twig' %}

{% block page_stylesheets %}
    <style type="text/css">
        .intl-tel-input {
            width: 100%;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Suppliers'|trans }} <small>{{ 'new'|trans }}</small></h3>
        </div>
    </div>
    {{ form_start(form, {'attr': {'role': 'form', 'id': 'supplier', 'class': 'form-horizontal form-label-left'}}) }}
        {{ form_row(form) }}
        <div class="pull-right">
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
            <a href="{{ path('app_suppliers_index') }}" class="btn btn-default">{{ 'Back to list'|trans }}</a>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        var url_utilScript = '{{ asset('plugins/intl-tel-input/js/utils.js') }}';
        $(document).ready(function() {
            App.Suppliers.Form.init();
            App.Forms.init();
        });
    </script>
{% endblock %}
