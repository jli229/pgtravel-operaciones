{% extends 'frontend.html.twig' %}

{% block page_stylesheets %}
    <style type="text/css">
        .intl-tel-input {
            width: 100%;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Suppliers'|trans }} <small>{{ 'edit'|trans }}</small></h3>
        </div>
    </div>
    {{ form_start(form, {'attr': {'role': 'form', 'id': 'supplier', 'class': 'form-horizontal form-label-left'}}) }}
        {{ include('Suppliers/form.html.twig') }}
        <div class="pull-right">
            <a href="{{ path('app_suppliers_index') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            App.FormSupplier.init();
            App.Forms.init();
        });
    </script>
{% endblock %}
