{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Users'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right"><a href="{{ path('app_users_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-users" class="table table-striped table-bordered bulk_action">
                        <thead>
                            <tr>
                                <th width="26">&nbsp;</th>
                                <th>{{ 'Full name'|trans }}</th>
                                <th>{{ 'Email'|trans }}</th>
                                <th width="90">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for record in query.result %}
                                <tr>
                                    <td><input type="checkbox" class="flat"></td>
                                    <td>{{ record.fullName }}</td>
                                    <td>{{ record.email }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_users_view', {'id': record.id}) }}" class="btn btn-default btn-xs" title="{{ 'View'|trans }}">
                                                <i class="fa fa-file-o"></i>
                                            </a>
                                            <a href="{{ path('app_users_edit', {'id': record.id}) }}" class="btn btn-primary btn-xs" title="{{ 'Edit'|trans }}">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="{{ path('app_users_delete', {'id': record.id}) }}" class="btn btn-danger btn-xs btn-delete" title="{{ 'Remove'|trans }}">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            {% if app.session.flashBag.has('notice') %}
                +(function() {
                    swal({
                        title: '{{ 'Notification'|trans }}',
                        text: '{{ app.session.flashBag.get('notice')[0] }}'
                    });
                }());
            {% endif %}

            var $datatable = $('#datatable-users');

            $datatable.dataTable({
                'order': [[ 1, 'asc' ]],
                'columnDefs': [
                    {
                        orderable: false,
                        targets: [0, 3]
                    }
                ]
            });

            $datatable.on('draw.dt', function() {
                $(this).find('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green'
                });
            });

            $('.btn-delete').on('click', function(event) {
                event.preventDefault();

                var url = $(this).attr('href');

                swal({
                    title: '{{ 'Confirm remove'|trans }}',
                    text: '{{ 'The record will be removed. Are you sure you want to continue?'|trans }}',
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d9534f'
                }, function(isConfirmed) {
                    if (isConfirmed) {
                        location.href = url;
                    }
                });
            });
        });
    </script>
{% endblock %}