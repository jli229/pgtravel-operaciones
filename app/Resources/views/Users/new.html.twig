{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Users'|trans }} <span>{{ 'new'|trans }}</span></h3>
        </div>
    </div>
    {{ form_start(form, {'attr': {'role': 'form', 'id': 'user', 'class': 'form-horizontal form-label-left'}}) }}
        <div class="x_panel">
            <div class="x_title">
                <h2>{{ 'Personal info'|trans }}</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-group">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.gender, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.gender, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="x_panel">
            <div class="x_title">
                <h2>{{ 'System info'|trans }}</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.roles, null, {'label_attr': {'class': 'control-label col-xs-12 col-sm-3'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="pull-right">
            <a href="{{ path('app_users_index') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            +(function() {
                $.validator.addMethod('strongpassword', function(value, element) {
                    return this.optional(element) || (/[A-Z]/.test(value) && /[a-z]/.test(value) && /[0-9]/.test(value) && value.length > 7);
                }, '{{ 'Password strong is too low (8 characters minimun and contains at least 1 character from groups [A-Z], [a-z] and [0-9])'|trans }}');
                $('#user').validate({
                    rules: {
                        '{{ form.plainPassword.first.vars.full_name }}': 'strongpassword',
                        '{{ form.plainPassword.second.vars.full_name }}': {
                            equalTo: '#{{ form.plainPassword.first.vars.id }}'
                        }
                    },
                    errorPlacement: function(error, element) {
                        if (!element.data('tooltipster-ns')) {
                            element.tooltipster({
                                trigger: 'custom',
                                onlyOne: false,
                                position: 'bottom-left',
                                positionTracker: true
                            });
                        }
                        element.tooltipster('update', $(error).text());
                        element.tooltipster('show');
                    },
                    success: function (label, element) {
                        $(element).tooltipster('hide');
                    }
                });
            }());
        });
    </script>
{% endblock %}