    <script type="text/javascript">
        app_user_changepassword_url = '{{ path('app_user_changepassword') }}';
        app_user_checkpassword_url = '{{ path('app_user_checkpassword') }}';
    </script>

    <!-- Custom Theme Scripts -->
    <script src="{{ asset('js/custom.js') }}"></script>
    <script>
        $(document).ready(function() {
            App.Main.init();
        });
    </script>

    {% block page_javascripts %}{% endblock %}
{% endblock %}