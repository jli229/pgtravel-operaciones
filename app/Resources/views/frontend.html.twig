        "../web/plugins/sweetalert/sweetalert.css"
        "../web/plugins/bootstrap-fileupload/bootstrap-fileupload.css"
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    {% block page_stylesheets %}{% endblock %}

    <!-- Custom Theme Style -->
    {% stylesheets filter="yui_css" output="compiled/css/custom.css"
        "../web/css/custom.css"
        %}
