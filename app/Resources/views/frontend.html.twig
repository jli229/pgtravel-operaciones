    <link rel="stylesheet" href="{{ asset('plugins/font-awesome/css/font-awesome.min.css') }}">
    <!-- intl-tel-input -->
    <link rel="stylesheet" href="{{ asset('plugins/intl-tel-input/css/intlTelInput.min.css') }}">
    <!-- iCheck -->
    <link rel="stylesheet" href="{{ asset('plugins/iCheck/skins/flat/green.css') }}">

    {% stylesheets filter="yui_css" output="compiled/css/plugins.css"
        "../web/plugins/nprogress/nprogress.css"
        "../web/plugins/tooltipster/css/tooltipster.css"
        "../web/plugins/tooltipster/css/tooltipster-custom.css"
        "../web/plugins/tooltipster/css/themes/tooltipster-shadow.css"
        "../web/plugins/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css"
