{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Reports'|trans }}</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Cuentas por cobrar</h2>
                    <ul class="nav navbar-right panel_toolbox" style="min-width: auto;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form action="{{ path('app_reports_cxcobrar') }}" role="form" method="post" target="_blank">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label>From</label>
                                    <input type="text" name="from" class="datepicker form-control input-sm" value="{{ dates.first_day|date('d/m/Y') }}">
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label>To</label>
                                    <input type="text" name="to" class="datepicker form-control input-sm" value="{{ dates.last_day|date('d/m/Y') }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label>{{ 'State'|trans }}</label>
                                    <select name="state" id="" class="form-control input-sm">
                                        <option value="">{{ 'All'|trans }}</option>
                                        <option value="no">Por cobrar</option>
                                        <option value="yes">Cobradas</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label>{{ 'Format'|trans }}</label>
                                    <select name="format" id="" class="form-control input-sm">
                                        <option value="pdf">PDF</option>
                                        <option value="xls">Excel</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="pull-right"><button type="submit" class="btn btn-primary">{{ 'Generate'|trans }}</button></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Cuentas por pagar</h2>
                    <ul class="nav navbar-right panel_toolbox" style="min-width: auto;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form action="#" role="form" method="post" target="_blank">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label for="">{{ 'From'|trans }}</label>
                                    <input type="text" class="datepicker form-control input-sm" value="{{ dates.first_day|date('d/m/Y') }}">
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label for="">{{ 'To'|trans }}</label>
                                    <input type="text" class="datepicker form-control input-sm" value="{{ dates.last_day|date('d/m/Y') }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label for="">{{ 'State'|trans }}</label>
                                    <select name="" id="" class="form-control input-sm">
                                        <option value="">{{ 'All'|trans }}</option>
                                        <option value="no">Por pagar</option>
                                        <option value="yes">Pagadas</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <label for="">{{ 'Format'|trans }}</label>
                                    <select name="" id="" class="form-control input-sm">
                                        <option value="pdf">PDF</option>
                                        <option value="xls">Excel</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="pull-right"><button type="submit" class="btn btn-primary">{{ 'Generate'|trans }}</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}