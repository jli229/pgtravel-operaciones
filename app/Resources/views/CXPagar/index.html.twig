{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Cuentas x pagar'|trans }}</h2>
                    <ul class="nav navbar-right panel_toolbox" style="min-width: auto;">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form id="filter">
                        <div class="row">
                            <div class="col-sm-2 col-sm-offset-10 col-xs-6 col-xs-offset-6">
                                <label for="filter_state" class="control-label">{{ 'State'|trans }}</label>
                                <select id="filter_state" name="filter[state]" class="form-control input-sm">
                                    <option value=""{% if filter.state is not defined or filter.state == '' %} selected="selected"{% endif %}></option>
                                    <option value="no"{% if filter.state is defined and filter.state == 'no' %} selected="selected"{% endif %}>No pagado</option>
                                    <option value="yes"{% if filter.state is defined and filter.state == 'yes' %} selected="selected"{% endif %}>Pagado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-xs-12"><br></div>
                    </div>
                    <table id="datatable-x" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'Client'|trans }}</th>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Service'|trans }}</th>
                                <th>{{ 'Start'|trans }}</th>
                                <th>{{ 'End'|trans }}</th>
                                <th>{{ 'Supplier'|trans }}</th>
                                <th>{{ 'Pay date'|trans }}</th>
                                <th>{{ 'Notes'|trans }}</th>
                                <th width="40">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade in" id="modal-change" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>

    <div class="modal fade in" id="modal-view" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.PayableAccounts.Index.init();
        });
    </script>
{% endblock %}
