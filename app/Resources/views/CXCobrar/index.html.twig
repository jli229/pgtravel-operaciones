{% extends 'frontend.html.twig' %}

{% block page_stylesheets %}
    <link href="{{ asset('plugins/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('plugins/sweetalert/sweetalert.css') }}">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Cuentas x cobrar'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-2 col-sm-offset-10 col-xs-6 col-xs-offset-6">
                            <label for="filter-state" class="control-label">{{ 'State'|trans }}</label>
                            <select id="filter-state" class="form-control input-sm filter-state">
                                <option value=""></option>
                                <option value="no">No pagado</option>
                                <option value="yes">Pagado</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12"><br></div>
                    </div>
                    <table id="datatable-x" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'Client'|trans }}</th>
                                <th>{{ 'Booking name'|trans }}</th>
                                <th>{{ 'Start'|trans }}</th>
                                <th>{{ 'End'|trans }}</th>
                                <th>{{ 'Pay date'|trans }}</th>
                                <th width="100">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade in" id="modal-change">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ 'Mark as paid'|trans }}</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <label>{{ 'Notes'|trans }}</label>
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button">{{ 'Change state'|trans }}</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Cancel'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade in" id="modal-view">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ 'Paid notes'|trans }}</h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger">{{ 'Cancel pay'|trans }}</a>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script src="{{ asset('plugins/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('plugins/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/sweetalert/sweetalert.min.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            var $table = $('#datatable-x');

            $table.on('click', '.btn-change-state', function(event) {
                event.preventDefault();

                var $modal = $('.modal#modal-change');
                $modal.data('record-url', $(this).attr('href'));
                $modal.find('textarea').val('');
                $modal.find('button.btn-primary').removeAttr('disabled').text('{{ 'Change state'|trans }}')
                $modal.modal({
                    backdrop: 'static'
                });
            });

            $table.on('click', '.btn-view', function(event) {
                event.preventDefault();

                var $modal = $('.modal#modal-view');
                
                $modal.modal({
                    backdrop: 'static'
                });
                $modal.find('.modal-body').empty().load($(this).attr('href'));
                $modal.find('a.btn-danger').attr('href', $(this).data('cancel-url'));
            });

            $('.modal#modal-change button.btn-primary').on('click', function() {
                $(this).attr('disabled', 'disabled').text('{{ 'Saving...'|trans }}')
                $.ajax($('.modal#modal-change').data('record-url'), {
                    data: {
                        notes: $('.modal#modal-change textarea').val()
                    },
                    dataType: 'json',
                    method: 'POST',
                    success: function(json) {
                        $table.dataTable().api().draw(false);
                        swal({
                            title: '{{ 'Success'|trans }}',
                            text: '{{ 'Operation done successfuly.'|trans }}'
                        });
                        $('.modal#modal-change').modal('hide');
                    }
                })
            });

            $table.dataTable({
                order: [[2, 'desc']],
                aoColumns: [
                    {name: 'client'},
                    {name: 'name'},
                    {name: 'startAt'},
                    {name: 'endAt'},
                    {name: 'date'},
                    {
                        sortable: false,
                        searchable: false
                    }
                ],
                serverSide: true,
                ajax: {
                    method: 'post',
                    url: '{{ path('app_cxcobrar_getdata') }}',
                    data: function(params) {
                        return $.extend({}, params, {
                            filter: {
                                state: $('#filter-state').val()
                            }
                        });
                    }
                }
            });

            $('#filter-state').on('change', function() {
                $table.dataTable().api().draw(true);
            }); 
        });
    </script>
{% endblock %}