{% block rent_car_type_form_row %}
    <div class="x_panel">
        <div class="x_title">
            <h2>{{ 'Car type info'|trans }}</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <dirv class="row">
                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'control-label col-sm-3 col-xs-12'}}) }}
                    <div class="col-xs-12 col-sm-6">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control col-sm-7 col-xs-12'}}) }}
                    </div>
                </div>
            </dirv>
        </div>
    </div>
    {{ form_rest(form) }}
{% endblock %}
