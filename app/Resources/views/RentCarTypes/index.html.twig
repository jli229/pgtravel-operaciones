{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Rent car types'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right"><a href="{{ path('app_rentalcartypes_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-x" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th width="80">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for car in records.result %}
                                <tr>
                                    <td>{{ car }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_rentalcartypes_view', {'id': car.id}) }}" class="btn btn-default btn-xs" title="{{ 'View'|trans }}"><span class="fa fa-eye"></span></a>
                                            <a href="{{ path('app_rentalcartypes_edit', {'id': car.id}) }}" class="btn btn-primary btn-xs" title="{{ 'Edit'|trans }}"><span class="fa fa-edit"></span></a>
                                            <a href="{{ path('app_rentalcartypes_delete', {'id': car.id}) }}" class="btn btn-danger btn-xs btn-delete" title="{{ 'Remove'|trans }}"><span class="fa fa-remove"></span></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        $(document).ready(function() {
            App.RentCarTypes.Index.init();
        });
    </script>
{% endblock %}
