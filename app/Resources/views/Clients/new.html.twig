{% extends 'frontend.html.twig' %}

{% form_theme form 'Clients/form.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>{{ 'Clients'|trans }} <small>{{ 'new'|trans }}</small></h3>
        </div>
    </div>
    <div class="clearfix"></div>
    {{ form_start(form, {'attr': {'role': 'form', 'id': 'client', 'class': 'form-horizontal'}}) }}
        {{ form_row(form) }}
        <div class="pull-right">
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
            <a href="{{ path('app_clients_index') }}" class="btn btn-default">{{ 'Back to list'|trans }}</a>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        var url_utilScript = '{{ asset('plugins/intl-tel-input/js/utils.js') }}';
        $(document).ready(function() {
            App.Clients.Form.init();
        });
    </script>
{% endblock %}
