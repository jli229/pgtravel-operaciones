{% extends 'frontend.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Clients'|trans }}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="pull-right"><a href="{{ path('app_clients_new') }}" class="btn btn-primary">{{ 'Add new'|trans }}</a></div>
                    <table id="datatable-clients" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>{{ 'Full name'|trans }}</th>
                                <th width="60">{{ 'Actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            {% if app.session.flashBag.has('notice') %}
                +(function() {
                    swal({
                        title: '{{ 'Notification'|trans }}',
                        text: '{{ app.session.flashBag.get('notice')[0] }}'
                    });
                }());
            {% endif %}

            App.Clients.Index.init();
        });
    </script>
{% endblock %}